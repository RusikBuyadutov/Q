<Kategorii>:
	FloatLayout:
		id:kategor_float
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size			
				source:"primer1.png"
		ImageButton:
			pos_hint:{"top":.99,"right":.94}
			size_hint:.08,.08
			source:"Krestik.png"
			on_press:
				app.Klik()
			on_release:
				app.change_screen("menu_screen")
		ImageButton:
			pos_hint:{"top":.95,"right":.75}
			size_hint:.5,.1
			source:"Start.png"
			on_press:
				app.Klik()	
				app.kat()	
		ScrollView:						
			pos_hint:{"top":.85,"left":1}
			size_hint:1,1
			GridLayout:
				cols:2
				spacing:0,20
				size_hint_y:None
				height:self.minimum_height
				row_default_height:'60dp'
				row_force_default:True
				padding:0,10,0,100
				Image:
					allow_stretch:True
					keep_ratio:False
					source:"kategory\\Skelet.png"
				CheckBox:
					id:KatSkelet
					background_checkbox_normal:"Net.png"
					background_checkbox_down:"Da.png"
					size_hint_x:.15				
				Image:
					allow_stretch:True
					keep_ratio:False
					source:"kategory\\Dobrye.png"
				CheckBox:
					id:KatDobr
					background_checkbox_normal:"Net.png"
					background_checkbox_down:"Da.png"
					size_hint_x:.15
				Image:
					allow_stretch:True
					keep_ratio:False
					source:"kategory\\Politika.png"
				CheckBox:
					id:KatPol
					background_checkbox_normal:"Net.png"
					background_checkbox_down:"Da.png"
					size_hint_x:.15
				Image:
					allow_stretch:True
					keep_ratio:False
					source:"kategory\\Vecherinka.png"
				CheckBox:
					id:KatVec
					background_checkbox_normal:"Net.png"
					background_checkbox_down:"Da.png"
					size_hint_x:.15
				Image:
					allow_stretch:True
					keep_ratio:False
					source:"kategory\\Moral.png"
				CheckBox:
					id:KatMor
