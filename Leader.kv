<Leader>:
	FloatLayout:

		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size			
				source:"lead.png"
		
		ImageButton:
			pos_hint:{"top":.95,"right":.75}
			size_hint:.5,.1
			source:"sled1.png"
			on_press:
				app.nextquestion()
				app.Klik()
		Label:
			id:skolkoza
			font_size:25
			bold:True
			color:[0,0,0,1]
			pos_hint:{"top":.90,"right":.85}
			size_hint:.7,.2
		GridLayout:
			id:leaderboard
			cols:2

			pos_hint:{"top":.8,"right":1}
			size_hint:1,.8
