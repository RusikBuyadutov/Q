<Pravila>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size	
				source:"rules/Pravila1.png"					
		ImageButton:
			pos_hint:{"top":.98,"right":.92}
			size_hint:.1,.1
			source:"Krestik.png"
			on_press:
				app.Klik()
			on_release:
				app.change_screen("menu_screen")
		ImageButton:
			pos_hint:{"top":.15,"right":.92}
			size_hint:.1,.1
			source:"StrelkaNapravo.png"
			on_press:
				app.Klik()
			on_release:
				app.change_screen("pravila2_screen")