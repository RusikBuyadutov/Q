<Pravila>:
	FloatLayout:
		canvas.before:

			Rectangle:
				
				pos:self.pos
				size:self.size	
				source:"eng/backfon/infopage.png"					
		
		GridLayout:
			rows:1
			spacing:30
			
			pos_hint:{"top":.22,"left":1}
			size_hint:1,.1
			ImageButton:			
				id:laws
				source:"eng/icons/laws1.png"
				on_release:
					app.pageinfo1()
				on_press:
					app.Klik()	
			ImageButton:
				id:zvuk1				
				source:"eng/icons/voloff.png"
				on_press:
					app.Klik()
				on_release:
					app.Zvuk()	
			ImageButton:
				id:home
				source:"eng/icons/home.png"
				on_press:
					app.Klik()
				on_release:
					app.change_screen("menu_screen")
			ImageButton:
				source:"eng/icons/language.png"
				on_press:
					app.Klik()
			ImageButton:
				source:"eng/icons/help.png"
				on_press:
					app.Klik()
				on_release:
					app.infoscr()