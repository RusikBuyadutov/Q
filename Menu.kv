<Menu>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size
				source:"Menu.png"
		
		GridLayout:
			cols:1
			spacing:10
			padding:[root.width/4,0,root.width/4,0]
			pos_hint:{"top":.625,"left":1}
			size_hint:1,.4
			ImageButton:
				allow_stretch: True
				source:"Igrat.png"
				on_press:
					app.Klik()
				on_release:
					app.change_screen("igrok_screen")
			
			ImageButton:
				allow_stretch: True
				source:"Pravila.png"
				on_press:
					app.Klik()
				on_release:
					app.change_screen("pravila_screen")
			ImageButton:
				allow_stretch: True
				source:"Yazik.png"
				on_press:
					app.Klik()
				on_release:
					print("YAZIK")
					app.change_screen("final_screen")
					app.priz()
		GridLayout:
			rows:1
			spacing:30
			padding:[root.width/3,0,root.width/3,0]
			pos_hint:{"top":.20,"left":1}
			size_hint:1,.2
			ImageButton:			
				id:zvuk
				source:"VolOFF.png"
				on_release:
					app.Zvuk()
				on_press:
					app.Klik()
					if self.source =="VonON.png":\
					self.source="VolOFF.png"
					else : self.source ="VonON.png"
				
					
					
			ImageButton:				
				source:"adv.png"
				on_press:
					app.Klik()
				on_release:
					print("REKLAMA")
			
