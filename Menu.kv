<Menu>:
	
	FloatLayout:

		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size
				source:"eng/backfon/main.png"
		
		GridLayout:
			cols:1
			spacing:10
			padding:[root.width/4,0,root.width/4,0]
			pos_hint:{"top":.70,"left":1}
			size_hint:1,.4
			
			
			ImageButton:
				id:knopkaigrat
				
				
				source:"eng/buttons/go.png"
				on_press:
					app.Klik()
					app.sour()
				on_release:
					app.change_screen("igrok_screen")
					app.sour1()
					
					
		
			
			
		ImageButton:			
			id:laws
			pos_hint:{"top":.695,"right":.55}
			size_hint:.1,.1
			source:"eng/icons/rulesmain.png"
			on_release:
				app.pageinfo()
			on_press:
				app.Klik()	
		ImageButton:
			id:zvuk	
			size_hint:.1,.1	
			pos_hint:{"top":.5525,"right":.8}		
			source:"eng/icons/soundmain1.png"
			on_press:
				app.Klik()	
			on_release:
				app.Zvuk()
		ImageButton:
			pos_hint:{"top":.5525,"right":.3}
			size_hint:.1,.1
			source:"eng/icons/languagemain.png"
			on_press:
				app.Klik()
		ImageButton:
			pos_hint:{"top":.405,"right":.55}
			size_hint:.1,.1
			source:"eng/icons/infomain.png"
			on_press:
				app.Klik()
			on_release:
				app.infoscr()
					

		
