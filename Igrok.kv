<Label>:
	font_name:"style.ttf"
<TextInput>
	font_name:"style.ttf"
<Igrok>:
	FloatLayout:
		id:igrokfloat
		canvas.before:			
			Rectangle:
				source:"eng/backfon/playerpage.png"
				pos:self.pos
				size:self.size
		ImageButton:
			pos_hint:{"top":.415,"left":.1}
			size_hint:1,.15
			source:"eng/icons/addplayer.png"
			on_press:
				app.Klik()
			on_release:
				app.add_player()
		ImageButton:
			id:igrokprodoljit
			pos_hint:{"top":.3,"left":.1}
			size_hint:1,.1
			source:"eng/buttons/ok.png"
			on_press:
				app.Klik()
				
				app.ok()
			on_release:
				app.ok1()
				app.proverka3()
				app.proverka()
		
		
		ScrollView:
			pos_hint:{"top":.79,"right":1}
			size_hint:1,.4
			GridLayout:
				size_hint_y: None
            	height: self.minimum_height
            	row_default_height: '30dp'
            	row_force_default: True
				
				id:IGROKI
				cols:1
					
				spacing:40
				padding:root.width/6,10,root.width/6,300
				TextInput:
					id:igrok1
					font_size:40
					halign:"center"	      					
					hint_text:"player 1"
					hint_text_color:0,0,0,1
					multiline:False						
				TextInput:
					id:igrok2	
					font_size:40
					halign:"center"			
					hint_text:"player 2"
					hint_text_color:0,0,0,1
					multiline:False
					
				TextInput:
					id:igrok3
					font_size:40
					halign:"center"
					hint_text:"player 3"
					hint_text_color:0,0,0,1
					multiline:False
					
		GridLayout:
			rows:1
			spacing:30
			
			pos_hint:{"top":.22,"left":1}
			size_hint:1,.1
			ImageButton:			
				id:laws
				source:"eng/icons/laws0.png"
				on_release:
					app.pageinfo()
				on_press:
					app.Klik()	
			ImageButton:
				id:zvuk3				
				source:"eng/icons/voloff.png"
				on_press:
					app.Klik()	
				on_release:
					app.Zvuk()
			ImageButton:
				id:home
				source:"eng/icons/home.png"
				on_press:
					app.Klik()
				on_release:
					app.change_screen("menu_screen")
			ImageButton:
				source:"eng/icons/language.png"
				on_press:
					app.Klik()
			ImageButton:
				source:"eng/icons/help.png"
				on_press:
					app.Klik()
				on_release:
					app.infoscr()