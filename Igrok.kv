<Igrok>:
	FloatLayout:
		id:igrokfloat
		canvas.before:			
			Rectangle:
				source:"primer1.png"
				pos:self.pos
				size:self.size
		ImageButton:
			pos_hint:{"top":.99,"left":.90}
			size_hint:.2,.15
			source:"3.png"
			on_press:
				app.Klik()

			on_release:
				
				
				app.add_player()
		ImageButton:
			pos_hint:{"top":.95,"right":.75}
			size_hint:.5,.1
			source:"Go.png"
			on_press:
				app.Klik()
				app.proverka()
				app.proverka3()
		ImageButton:
			pos_hint:{"top":.99,"right":.94}
			size_hint:.08,.08
			source:"Krestik.png"
			on_press:
				app.Klik()
			on_release:
				app.change_screen("menu_screen")
		ScrollView:
			pos_hint:{"top":.8,"right":1}
			size_hint:1,1
			GridLayout:
				id:IGROKI
				cols:1
				size_hint_y:None
				height:self.minimum_height
				row_default_height:'50dp'
				row_force_default:True
				spacing:40
				padding:root.width/6,10,root.width/6,170
				TextInput:
					id:igrok1
					font_size:20
					halign: 'center'
	                valign: 'middle'
					background_color:(255/255, 0, 0, 1)
					hint_text:"Введите имя 1-ого"
					hint_text_color:1,1,1,1
					multiline:False					
					background_normal:"Knopka.png"
					background_active:"Knopka.png"
					
				TextInput:
					id:igrok2
					font_size:20
					halign: 'center'
	                valign: 'middle'
	                background_color:(0/255, 0/255, 225/255, 1)
					hint_text:"Введите имя 2-ого"
					hint_text_color:1,1,1,1
					multiline:False
					background_normal:"Knopka.png"
					background_active:"Knopka.png"
				TextInput:
					id:igrok3
					font_size:20
					halign: 'center'
	                valign: 'middle'
	                background_color:(50/255, 203/255, 0/255, 1)
					hint_text:"Введите имя 3-его"
					hint_text_color:1,1,1,1
					multiline:False
					background_normal:"Knopka.png"
					background_active:"Knopka.png"
				