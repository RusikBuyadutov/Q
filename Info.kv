<Label>:
	font_name:"style.ttf"
<Info>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size	
				source:"eng/backfon/info.png"
		
		

		ImageButton:
			pos_hint:{"top":.68,"right":1}
			size_hint:1,.3
			source:"eng/info_screen/mail.png"
			on_press:
				
				app.pochta()

		
		ImageButton:
			pos_hint:{"top":.44,"right":.96}
			size_hint:.95,.1
			source:"eng/info_screen/inst2.png"
			on_press:
				app.inst2()

		 
		ImageButton:
			
			pos_hint:{"top":.48,"right":.96}
			size_hint:.95,.1
			source:"eng/info_screen/inst1.png"
			on_press:
				app.inst1()
		
		GridLayout:
			rows:1
			spacing:30
			
			pos_hint:{"top":.22,"left":1}
			size_hint:1,.1
			ImageButton:			
				id:laws
				source:"eng/icons/laws0.png"
				on_release:
					app.pageinfo()
				on_press:
					app.Klik()	
			ImageButton:
				id:zvuk2				
				source:"eng/icons/voloff.png"
				on_press:
					app.Klik()	
				on_release:
					app.Zvuk()
			ImageButton:
				id:home
				source:"eng/icons/home.png"
				on_press:
					app.Klik()
				on_release:
					app.change_screen("menu_screen")
			ImageButton:
				source:"eng/icons/language.png"
				on_press:
					app.Klik()
			ImageButton:
				source:"eng/icons/help1.png"
				on_press:
					app.Klik()
				on_release:
					app.infoscr1()
		
			