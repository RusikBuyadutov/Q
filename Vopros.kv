<Vopros>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos:self.pos
				size:self.size			
				source:"primer1.png"
		
			
		Image:
			id:vopros

			pos_hint:{"top":.95,"right":1}
			size_hint:1,.6
			source:"Vopros\\I\\intim (1).png"
		GridLayout:
			rows:1
			pos_hint:{"top":.35,"left":.5}
			size_hint:1,.1
			padding:[root.width/7,0,root.width/7,0]
			ImageButton:
				size_hint:.5,.8
				id:za
				source:"minus.png"
				on_press:
				
					app.chetmin()
			Label:
				id:chetchik
				color:[0,0,0,1]
				bold:True
				text:"1"
				font_size:30
			ImageButton:
				size_hint:.5,.8
				id:protiv
				source:"plus.png"
				on_press:
					app.chetplus()
		GridLayout:
			rows:1
			pos_hint:{"top":.25,"left":.5}
			size_hint:1,.25
			ImageButton:
				id:za
				source:"Za.png"
				on_press:
					app.za1()
			ImageButton:
				id:protiv
				source:"Protiv.png"
				on_press:
					app.protiv1()